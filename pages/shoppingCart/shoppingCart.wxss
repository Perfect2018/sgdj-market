  align-items: center
} */

.van-radio .van-radio__icon-wrap{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.radio-item{
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
}

.radio-btn{
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #f80;
  text-align: center;
  border-radius: 8rpx;
}