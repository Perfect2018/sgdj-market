/* pages/groupDetail/groupDetail.wxss */
page{
  background-color: #f1f1f1;
  padding: 0 20rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
}

page>view{
  background-color: #fff;
}

view.img>image{
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
}

.goods{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 0 10rpx;
  margin: 6rpx 0rpx;
  box-sizing: border-box;
}

/* .goods>view{
  width: 50%;
} */

.left{
  width: 50%;
}

.good-name{
  font-size: 32rpx;
  color: #000;
  font-weight: 700;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.goods-price{
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.price{
  text-decoration:line-through;
  color: #999;
  font-size: 28rpx;
}

.couponRate{
  font-size: 32rpx;
  font-weight: 700;
  color: #f11;
}

.add{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #f11;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  /* position: relative;
  left: 50rpx; */
  /* margin-top: 20rpx; */
  box-sizing: border-box;
}

.describe{
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border:1rpx solid #999;
  color: #999;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  /* overflow: hidden;
  text-overflow: ellipsis;
  line-clamp:3; */
  /* white-space: normal; */
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 3;    
  overflow: hidden;
}

.title{
  text-align: center;
  font-size: 32rpx;
  color: #000;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.goods-nuit>text:first-child{
  margin-right: 50rpx;
  box-sizing: border-box;
}

.prompt{
  border: 1rpx solid #999;
  color: #000;
  font-size: 28rpx;
  padding: 10rpx 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}