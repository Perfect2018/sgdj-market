/* pages/packLIst/packlist.wxss */
page{
  width: 100%;
  height: 100%;
  padding: 20rpx 6rpx;
  box-sizing: border-box;
}

.top{
  width: 100%;
  border-bottom: 1rpx solid #f1f1f1;
}

.top>view.btn{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.back{
  width: 180rpx;
  height: 60rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #f80;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
}

.detail{
  width: 100%;
  text-align: left;
  font-size: 24rpx;
  color: #808080;
}

.envelopes{
  max-height: 800rpx;
}

view.item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  align-items: center;
  /* padding: 0 10rpx; */
  border-bottom: 1rpx solid #f1f1f1;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.img{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
}

.img image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.time{
  color: #808080;
  font-size: 22rpx;
  margin-left: 10rpx;
  box-sizing: border-box;
}

.receiveAmt{
  color: #000;
  font-size: 24rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
}