/* pages/shopAdd/shopAdd.wxss */

.sh-code {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sh-code  .content {
  width: 600rpx;
  height: 900rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sh-code .content .img {
  min-width: 500rpx;
  min-height: 500rpx;
  width: 500rpx;
  height: 500rpx;
  margin: 40rpx 0;
}

.sh-code .content .desc {
  margin-top: 150rpx;
  color: #999;
}

.shop-add {
  padding-bottom: 60rpx;
}

.item {
  width: 100%;
  display: flex;
  font-size: 0.9rem;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
}

.item .item-title {
  width: 300rpx;
  text-align: left;
  padding: 25rpx 10rpx;
  box-sizing: border-box;
}

.item .item-tit::before {
  content: "*  ";
  color: #fdad00;
}

.item-border {
  border-bottom: none;
}

.imgs {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.imgs-x {
  padding: 0;
}

.imgs-x .img-item {
  margin: 10rpx 0;
}

.imgs .img-item {
  width: 33%;
  margin: 10rpx 0;
  position: relative;
  text-align: center;
}

.imgs .img-item .img-item-title {
  color: #f80;
  font-size: 22rpx;
}

.imgs .img-item .img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: 0;
  top: 35rpx;
}

.imgs .img-item-o {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.imgs .img-item-x {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f80;
  box-sizing: border-box;
  font-size: 60rpx;
  color: #f80;
  line-height: 180rpx;
  text-align: center;
  margin: 10rpx auto 0;
}

.search-shop {
  position: absolute;
  margin-top: -25rpx;
  z-index: 999;
  background-color: #fff;
  width: 60%;
  padding: 0 20rpx;
  left: 190rpx;
  height: 600rpx;
  overflow-x: scroll;
}

.search-shop-item {
  font-size: 28rpx;
  padding: 30rpx 0 0;
  border-bottom: 1rpx solid #eee;
}

.save-btn {
  width: 95%;
  height: 90rpx;
  margin: 40rpx auto;
  color: #fff;
  background-color: #f80;
}

.ht-code {
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #888;
}

.ht-code .img {
  height: 200rpx;
  width: 200rpx;
}
