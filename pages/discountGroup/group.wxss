/* pages/discountGroup/group.wxss */
page{
  margin: 0;
  padding: 0;
  
}

page>view{
  background-color: #f1f1f1;
}

.search{
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #f80;
  /* text-align: center; */
  box-sizing: border-box;
  display: flex;
  /* flex-wrap: nowrap;
  justify-content: center; */
  align-items: center;
  line-height: 100rpx;
}

.search view image{
  width: 36rpx;
  height: 30rpx;
  vertical-align: center;
  text-align: center;
  margin-right: 10rpx;
}

.search view{
  background-color: #fff;
  width: 690rpx;
  height: 62rpx;
  border-radius: 37rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.search-place{
  
  line-height: 62rpx;
  color: #999;
  font-size: 24rpx;
}

.shop {
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  padding: 6rpx 10rpx;
  min-height: 120rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

.shop-detail-left {
  width: 80%;
  display: flex;
  /* justify-content: space-around; */
  align-items: center;
  margin-left: 20rpx
}

.shop-logo-image {
  margin: 5rpx;
  font-size: 0;
  position: relative;
}

.shop-logo-image .state {
  position: absolute;
  left: 0;
  bottom: 0;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.7);
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  width: 100rpx;
  line-height: 40rpx;
}

.shop-logo-image .shop-image {
  /* min-width: 120rpx;
  min-height: 120rpx; */
  min-width: 100rpx;
  min-height: 100rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  overflow: hidden;
}

.shop .detail-right {
  display: flex;
  max-height: 120rpx;
  /* justify-content: space-between; */
  justify-content: center;
  flex-direction: column;
  margin: 5rpx 0;
}

.shop .shop-name {
  /* margin-left: 10rpx; */
  font-size: 32rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 10rpx
}

.shop-qualification-image {
  min-width: 100rpx;
}

.shop-qualification-image .img {
  min-width: 120rpx;
  width: 120rpx;
  height: 90rpx;
  border-radius: 5rpx;
  overflow: hidden;
}


.sign{
  width: 80rpx;
  /* height: 40rpx; */
  color: #fff;
  /* color: #f80; */
  font-size: 20rpx;
  text-align: center;
  /* line-height: 40rpx; */
  background-color: #f80;
  position: absolute;
  top: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  /* right: -10rpx; */
  /* transform: rotate(45deg); */
  /* border-radius: 20rpx; */
}

.goods{
  background-color: #fff;
  width: 98%;
  margin: 0 auto;
  border-radius: 8rpx;
  margin-bottom: 50rpx;
  box-sizing: border-box;
}

view.img{
  position: relative;
}

view.img>image{
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
}

.look{
  width: 220rpx;
  height: 50rpx;
  background-color: #f80;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 8rpx;
  position: absolute;
  right: 0rpx;
  bottom: 30rpx;
  letter-spacing: 2rpx;
}

.item{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx 10rpx;
  justify-content: space-between;
  letter-spacing: 2rpx;
}

.item-left,.item-right{
  width: 50%;
  height: 200rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.item-right{
  text-align: center;
}

.good-name{
  font-size: 32rpx;
  color: #000;
  font-weight: 700;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.item-price{
  display: flex;
  justify-content: space-between;
}

.price{
  text-decoration:line-through;
  color: #999;
  font-size: 28rpx;
}

.couponRate{
  font-size: 32rpx;
  font-weight: 700;
  color: #f11;
}

.time{
  font-size: 30rpx;
  color: #fdad00;
  font-weight: 600;
}

.soldSize{
  font-size: 30rpx;
  color: #000;
}

.stockSize{
  font-size: 32rpx;
  color: #fdad00;
}

.add{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #f11;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  position: relative;
  left: 50rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}