/* pages/info/info.wxss */
page {
  height: 100%;
  background-color: #f3f1f2;
  /* padding: 0 10rpx; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.field{
  height: 70rpx;
  border-radius: 30rpx;
  border: 1rpx solid #888;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.place{
  color: #888;
  font-size: 30rpx;
  font-weight: 600;
  
}

.custom-class{
  width: 100%;
}

.advertising{
  width: 100%;
  height: 400rpx;
  border: 1rpx solid #888;
  border-radius: 16rpx;
}

.content{
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.type{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-around;
  font-size: 36rpx;
  color: #000;
}

.type view{
  width: 49%;
  text-align: center;
}

.active{
  color: #888;
}