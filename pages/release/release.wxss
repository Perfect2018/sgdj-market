/* pages/release/release.wxss */
page{
  height: 100%;
  background-color: #f3f1f2;
  /* padding: 0 10rpx; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #505050;
}

.top{
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.top .item{
  margin:0;
}

.radio-label {
  padding: 0;
}

.messageType{
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.messageType>label{
  margin-right: 20rpx;
  box-sizing: border-box;
}

.fs-34{
  font-size: 34rpx;
}

.item{
  min-height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx 20rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.item input{
  color: #aaa;
}

.item label{
  margin-right: 20rpx;
}

.item textarea{
  width: 100%;
  height: 100rpx;
  line-height: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 16rpx;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: left;
}

.item picker{
  width: 70%;
  height: 70rpx;
}

.picker{
  color: #aaa;
}

.bottom{
  width: 100%;
  height: 200rpx;
  position: relative;
  color: #000;
  /* 垂直水平居中 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.confirm{
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  background-color: #f80;
