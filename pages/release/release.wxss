.img{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.img-item{
  width: 198rpx;
  height: 198rpx;
  background-color: #f1f1f1;
  border-radius: 16rpx;
  position: relative;
}

.img-item view{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-item .camera{
  width: 50%;
  height: 50%;
}

.getimage{
  width: 100%;
  height: 100%;
}

.img-item .del{
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  position: absolute;
  right: 0;
}

.getcode{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 30rpx;
  box-sizing: border-box;
  background-color: #1296D4;
  border-radius: 16rpx;
  color: #000;
  letter-spacing: 4rpx;
}