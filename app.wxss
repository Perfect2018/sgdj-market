  font-size: 50rpx;
}

.isIPhoneX {
  padding-bottom: 68rpx;
}

.van-card {
  background-color: #fff !important;
}

.van-checkbox {
  align-items: center;
}

.van-cell--required::before {
  color: #f80 !important;
}

.van-info {
  background-color: #f80 !important;
}

movable-view {
  top: initial;
  left: initial;
  pointer-events: auto;
}

movable-area {
  pointer-events: none;
}

.cart-view {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99;
}

.cart-icon {
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #f80;
  border-radius: 50%;
  overflow: hidden;
  font-size: 60rpx;
  background-color: #fff;
  line-height: 140rpx;
  text-align: center;
  right: 0 !important;
  bottom: 200rpx !important;
}

.shake {
  animation: shake 800ms ease-in-out;
}

@keyframes shake {
  /* 动画需：“对称”实现 */

  10%, 90% {
    right: -1px;
  }

  20%, 80% {
    right: 2px;
  }

  30%, 70% {
    right: -4px;
  }

  40%, 60% {
    right: 4px;
  }

  50% {
    right: -4px;
  }
}

.van-dialog__confirm {
  color: #f80 !important;
}

/* 分销canvas */

.QRCanvas-shop, .QRCanvas-goods {
  width: 800px;
  height: 800px;
  position: fixed;
  top: -9000px;
  opacity: 0;
  left: 0px;
}

.QRCanvas {
  width: 640px;
  height: 1160px;
  position: fixed;
  top: -9000px;
  opacity: 0;
  left: 0px;
}

.QR-img {
  position: fixed;
  top: -10000;
  width: 100%;
  height: 100%;
  z-index: -99;
}

.QR-z-img {
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
  top: 0;
}

.QR-img .img {
  width: 95%;
  height: 90%;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  object-fit: initial;
  position: absolute;
}
